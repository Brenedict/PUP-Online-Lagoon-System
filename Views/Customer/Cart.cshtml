<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/customer/cart.css" asp-append-version="true">
</head>
<body>

    <header class="cart-header">
        <a href="stall-menu.html" class="back-button">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="header-title">My Cart</h1>
    </header>

    <div class="cart-container">

        <div class="cart-item">
            <div class="item-img-box"></div> <div class="item-details">
                <h3 class="item-name">Chicken Adobo with Rice</h3>
                <p class="item-desc">Description</p>
                <p class="item-price">₱55.00</p>

                <div class="counter-box">
                    <button class="btn-minus">−</button>
                    <span class="count-num">2</span>
                    <button class="btn-plus">+</button>
                </div>
            </div>

            <div class="item-actions">
                <span class="item-total-price">₱110.00</span>
                <button class="btn-delete">
                    <i class="fas fa-trash-can"></i>
                </button>
            </div>
        </div>

        <div class="cart-item">
            <div class="item-img-box"></div>

            <div class="item-details">
                <h3 class="item-name">Pork Sinigang</h3>
                <p class="item-desc">Description</p>
                <p class="item-price">₱60.00</p>

                <div class="counter-box">
                    <button class="btn-minus">−</button>
                    <span class="count-num">1</span>
                    <button class="btn-plus">+</button>
                </div>
            </div>

            <div class="item-actions">
                <span class="item-total-price">₱60.00</span>
                <button class="btn-delete">
                    <i class="fas fa-trash-can"></i>
                </button>
            </div>
        </div>

    </div>

    <div class="cart-footer">
        <div class="summary-row">
            <span>Subtotal</span>
            <span>₱170.00</span>
        </div>
        <div class="summary-row">
            <span>Service Fee</span>
            <span>₱5.00</span>
        </div>
        <div class="summary-row total-row">
            <span>Total</span>
            <span class="total-amount">₱175.00</span>
        </div>

        <a href="checkout.html" class="btn-checkout" style="text-decoration: none; display: block; text-align: center;">
            Proceed to Checkout
        </a>
    </div>

</body>
</html>
