@model PUP_Online_Lagoon_System.Models.DTO.CustomerOrdersDTO;
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    @* <link rel="stylesheet" href="~/css/customer/order-history.css" asp-append-version="true"> *@
    <link rel="stylesheet" href="~/css/vendor//vendor-order-history.css" asp-append-version="true">
</head>
<body>

    <header class="history-header">
        <div class="header-left">
            <a asp-controller="Customer" asp-action="Dashboard" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="header-title">Order History</h1>
        </div>
    </header>

    <div class="main-content">
        @if(Model.ordersList.Count() <= 0)
        {
            <div class="empty-history-card">
                <div class="icon-box">
                    <i class="far fa-clipboard" style="font-size: 40px; color: #d1d5db;"></i>
                </div>
                <p class="empty-text">No past orders yet</p>

                <a href="Stalls" class="btn-start-ordering">
                    Start Ordering
                </a>
            </div>
        } 
        else
        {
            @foreach (var order in Model.ordersList)
            {
                <div class="history-card">
                    <div class="card-top">
                        <div>
                            <h3 class="customer-name">@order.Order_ID</h3>
                            <p class="order-id">@order.OrderDate</p>
                        </div>
                        <span class="badge badge-@order.OrderStatus">@order.OrderStatus</span>
                    </div>

                    <div class="card-meta">
                        <div class="time"><i class="far fa-clock"></i> Pickup: @order.EstPickupTime</div>
                        <div class="total-price">₱@order.OrderTotal</div>
                    </div>

                    <div class="items-section">
                        <p class="items-label">Items:</p>
                        @foreach (var orderItem in Model.orderDetails[order.Order_ID])
                        {
                            string orderItemString = $"{orderItem.Quantity}x {orderItem.FoodName}";
                            <div class="item-row">
                                <span>@orderItemString</span>
                                <span>₱@orderItem.OriginalPrice</span>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>

    <nav class="bottom-nav">
        <a href="Dashboard" class="nav-item">
            <i class="fas fa-home"></i>
            <span>Home</span>
        </a>
        <a href="Stalls" class="nav-item">
            <i class="fas fa-store"></i>
            <span>Stalls</span>
        </a>
        <a href="OrderHistory" class="nav-item active">
            <i class="fas fa-receipt"></i>
            <span>Orders</span>
        </a>
        <a href="Profile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
    </nav>

</body>
</html>