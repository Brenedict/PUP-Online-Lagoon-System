@model PUP_Online_Lagoon_System.Models.DTO.CustomerRegisterDTO

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - PUP Lagoon Food Ordering</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>

    <header class="top-header">
        <a asp-controller="Account" asp-action="LandingPage" class="back-button">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="header-title">Customer Registration</h1>
    </header>

    <div class="main-content">

        <div class="info-box">
            Customer registration only. Vendors receive fixed accounts from Admin.
        </div>
        
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group">

                <div>
                    <label class="input-label">First Name <span class="required">*</span></label>
                    <input  
                        type="text" 
                        placeholder="Juan" 
                        class="custom-input"
                        asp-for="FirstName"
                    >
                </div>

                <div>
                    <label class="input-label">Last Name <span class="required">*</span></label>
                    <input  type="text" 
                            placeholder="Dela Cruz" 
                            class="custom-input"
                            asp-for="LastName"
                    >
                </div>

                <div>
                    <label class="input-label">Email <span class="required">*</span></label>
                    <input  type="email" 
                            placeholder="juan.delacruz@student.pup.edu.ph" 
                            class="custom-input"
                           asp-for="Email"
                    >
                </div>

                <div>
                    <label class="input-label">Contact Number <span class="required">*</span></label>
                    <input  type="tel" 
                            placeholder="" 
                            class="custom-input"
                           asp-for="ContactNum"
                    >
                </div>

                <div>
                    <label class="input-label">Password <span class="required">*</span></label>
                    <input  type="password" 
                            placeholder="At least 6 characters" 
                            class="custom-input"
                           asp-for="Password"
                    >
                </div>

                <div>
                    <label class="input-label">Confirm Password <span class="required">*</span></label>
                    <input type="password" placeholder="Re-enter your password" class="custom-input">
                </div>

                <button type="submit" class="btn-register" style="display: block; text-align: center; text-decoration: none;">
                    Register
                </button>
               
            </div>
        </form>

        <div class="footer-links">
            Already have an account?
            <a href="Login" class="login-link">Login here</a>
        </div>

    </div>

</body>