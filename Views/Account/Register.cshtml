@model PUP_Online_Lagoon_System.Models.DTO.CustomerRegisterDTO

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create an Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/login-register-form.css" asp-append-version="true" />
</head>
<div id="register-page" class="page form-page">
    <div class="top-strip"></div>
    <div class="content-wrapper">
        <div class="form-card">
            
            @* Back button *@
            <div class="back-btn" onclick="showPage('landing-page')">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
            </div>

            <h2 class="form-title">Register</h2>

            <form asp-controller="Account" asp-action="Register" method="post">
                @* Name Inputs *@
                <div class="form-group">
                    <label>First Name</label>
                    <input 
                        type="text" 
                        class="form-input" 
                        placeholder="Enter your full name"
                        asp-for="FirstName"
                    >
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <input 
                        type="text" 
                        class="form-input" 
                        placeholder="Enter your full name"
                        asp-for="LastName">
                </div>

                @* Example Contact Number Input *@
                <div class="form-group">
                    <label>Contact Number</label>
                    <input type="text"
                           class="form-input"
                           placeholder="+63"
                           asp-for="ContactNum">
                </div>

                @* Email Address Input *@
                <div class="form-group">
                    <label>Email Address</label>
                    <input 
                        type="email" 
                        class="form-input" 
                        placeholder="Enter your email"
                        asp-for="Email"
                    >
                </div>

                @* Password Input *@
                <div class="form-group">
                    <label>Password</label>
                    <input 
                        type="password" 
                        class="form-input" 
                        placeholder="Enter your password"
                        asp-for="Password">
                </div>

                <button type="submit" class="btn-maroon">Register</button>
            </form>
        </div>
    </div>
</div>