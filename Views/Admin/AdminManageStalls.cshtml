@model PUP_Online_Lagoon_System.Models.DTO.AdminStallsTabDTO;
@{
    int totalStallCount = Model.stallsList.Count();
    int totalOpenStallCount = Model.stallsList.Where(s => s.Item1.Status == true).ToList().Count();
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Stall Management - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin-manage-stalls.css" asp-append-version="true">
</head>
<body>

    <div class="admin-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h1 class="brand-title">PUP Lagoon</h1>
                    <p class="brand-subtitle">Admin Portal</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="AdminDashboard" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="AdminManageUsers" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="AdminManageStalls" class="nav-link active">
                    <i class="fas fa-cubes"></i>
                    <span>Food Stalls</span>
                </a>
                <a href="AdminManageOrders" class="nav-link">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Orders</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="logout-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">

            <header class="top-header">
                <h2 class="page-header-title">PUP Lagoon Food Ordering System</h2>
                <div class="admin-profile">
                    <div class="avatar-circle">A</div>
                    <div class="profile-text">
                        <p class="admin-name">Admin User</p>
                        <p class="admin-role">Administrator <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
            </header>

            <div class="page-content">

                <h1 class="page-title">Food Stall Management</h1>

                <form asp-controller="Admin" asp-action="StallRegister" method="get">
                    <button type="submit" class="btn-add-stall">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>

                <div class="search-section">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search by stall name or vendor..." class="search-input">
                </div>
                <p class="result-count">5 stalls found</p>

                <div class="stall-stats-row">
                    <div class="stat-box">
                        <p class="stat-label">Total Stalls</p>
                        <h2 class="stat-num">@(totalStallCount)</h2>
                    </div>
                    <div class="stat-box">
                        <p class="stat-label">Currently Open</p>
                        <h2 class="stat-num text-green">@(totalOpenStallCount)</h2>
                    </div>
                    <div class="stat-box">
                        <p class="stat-label">Currently Closed</p>
                        <h2 class="stat-num">@(totalStallCount - totalOpenStallCount)</h2>
                    </div>
                </div>

                <div class="table-card">
                    <table class="stall-table">
                        <thead>
                            <tr>
                                <th>STALL NAME</th>
                                <th>VENDOR NAME</th>
                                <th>TOTAL MENU ITEMS</th>
                                <th>AVG PREP TIME</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var stall in Model.stallsList) {
                                var stallInfo = stall.Item1;
                                var vendorInfo = stall.Item2;

                                string stallStatus = (stallInfo.Status) ? "open" : "closed";
                                <tr>
                                    <td class="font-bold">@stallInfo.StallName</td>
                                    <td>@($"{vendorInfo.FirstName} {vendorInfo.LastName}")</td>
                                    <td>@(Model.stallDetails[stallInfo.Stall_ID].Count())</td>
                                    <td>@stallInfo.PrepTime mins</td>
                                    <td><span class="badge badge-@stallStatus">@stallStatus</span></td>
                                    <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>

</body>