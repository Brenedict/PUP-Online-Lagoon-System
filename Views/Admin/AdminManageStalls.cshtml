
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Stall Management - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin-manage-stalls.css" asp-append-version="true">
</head>
<body>

    <div class="admin-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h1 class="brand-title">PUP Lagoon</h1>
                    <p class="brand-subtitle">Admin Portal</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="AdminDashboard" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="AdminManageUsers" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="AdminManageStalls" class="nav-link active">
                    <i class="fas fa-cubes"></i>
                    <span>Food Stalls</span>
                </a>
                <a href="AdminManageOrders" class="nav-link">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Orders</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="logout-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">

            <header class="top-header">
                <h2 class="page-header-title">PUP Lagoon Food Ordering System</h2>
                <div class="admin-profile">
                    <div class="avatar-circle">A</div>
                    <div class="profile-text">
                        <p class="admin-name">Admin User</p>
                        <p class="admin-role">Administrator <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
            </header>

            <div class="page-content">

                <h1 class="page-title">Food Stall Management</h1>

                <form asp-controller="Admin" asp-action="StallRegister" method="get">
                    <button type="submit" class="btn-add-stall">
                        <i class="fas fa-plus"></i>
                    </button>
                </form>

                <div class="search-section">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search by stall name or vendor..." class="search-input">
                </div>
                <p class="result-count">5 stalls found</p>

                <div class="stall-stats-row">
                    <div class="stat-box">
                        <p class="stat-label">Total Stalls</p>
                        <h2 class="stat-num">5</h2>
                    </div>
                    <div class="stat-box">
                        <p class="stat-label">Currently Open</p>
                        <h2 class="stat-num text-green">4</h2>
                    </div>
                    <div class="stat-box">
                        <p class="stat-label">Currently Closed</p>
                        <h2 class="stat-num">1</h2>
                    </div>
                </div>

                <div class="table-card">
                    <table class="stall-table">
                        <thead>
                            <tr>
                                <th>STALL NAME</th>
                                <th>VENDOR NAME</th>
                                <th>TOTAL MENU ITEMS</th>
                                <th>AVG PREP TIME</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="font-bold">Ate Maria's Carinderia</td>
                                <td>Maria Cruz</td>
                                <td>12</td>
                                <td>10-15 mins</td>
                                <td><span class="badge badge-open">Open</span></td>
                                <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                            </tr>
                            <tr>
                                <td class="font-bold">Manong's Chicken BBQ</td>
                                <td>Roberto Santos</td>
                                <td>8</td>
                                <td>15-20 mins</td>
                                <td><span class="badge badge-open">Open</span></td>
                                <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                            </tr>
                            <tr>
                                <td class="font-bold">Kuya's Pancit House</td>
                                <td>Jose Garcia</td>
                                <td>10</td>
                                <td>10-12 mins</td>
                                <td><span class="badge badge-open">Open</span></td>
                                <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                            </tr>
                            <tr>
                                <td class="font-bold">Aling Nena's Lutong Bahay</td>
                                <td>Nena Reyes</td>
                                <td>15</td>
                                <td>12-15 mins</td>
                                <td><span class="badge badge-closed">Closed</span></td>
                                <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                            </tr>
                            <tr>
                                <td class="font-bold">Sari-Sari Snacks</td>
                                <td>Linda Martinez</td>
                                <td>20</td>
                                <td>5-8 mins</td>
                                <td><span class="badge badge-open">Open</span></td>
                                <td><button class="btn-icon-delete"><i class="fas fa-trash"></i></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>

</body>