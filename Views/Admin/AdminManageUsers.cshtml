@model PUP_Online_Lagoon_System.Models.DTO.AdminUsersTabDTO;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin-manage-user.css" asp-append-version="true">
</head>
<body>

    <div class="admin-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h1 class="brand-title">PUP Lagoon</h1>
                    <p class="brand-subtitle">Admin Portal</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="AdminDashboard" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="AdminManageUsers" class="nav-link active">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="AdminManageStalls" class="nav-link">
                    <i class="fas fa-cubes"></i>
                    <span>Food Stalls</span>
                </a>
                <a href="AdminManageOrders" class="nav-link">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Orders</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="logout-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">

            <header class="top-header">
                <h2 class="page-header-title">PUP Lagoon Food Ordering System</h2>
                <div class="admin-profile">
                    <div class="avatar-circle">A</div>
                    <div class="profile-text">
                        <p class="admin-name">Admin User</p>
                        <p class="admin-role">Administrator <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
            </header>

            <div class="page-content">

                <div class="content-header">
                    <h1 class="page-title">User Management</h1>
                    <p class="page-subtitle">Manage student accounts</p>
                </div>

                <div class="content-card">

                    <div class="controls-row">
                        <div class="search-container">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" placeholder="Search by name, student number, or email..." class="search-input">
                        </div>
                        <button class="btn-filter"><i class="fas fa-filter"></i></button>
                        <div class="spacer-box"></div>
                    </div>

                    <p class="result-count">Showing @(Model.customerList.Count()) of @(Model.customerList.Count()) users</p>

                    <table class="user-table">
                        <thead>
                            <tr>
                                <th>USER ID</th>
                                <th>NAME</th>
                                <th>EMAIL</th>
                                <th>ORDERS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var user in Model.customerList) {
                                <tr>
                                    <td class="text-gray">@user.User_ID</td>
                                    <td class="font-bold">@user.FirstName @user.LastName</td>
                                    <td class="text-gray">@user.User.Email</td>
                                    <td>@(Model.totalOrders[user.Customer_ID])</td>
                                    <td><button class="btn-icon-delete"><i class="fas fa-user-times"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </main>
    </div>

</body>