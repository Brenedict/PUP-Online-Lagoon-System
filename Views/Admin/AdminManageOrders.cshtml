
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Monitoring - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin-manage-orders.css" asp-append-version="true">
</head>
<body>

    <div class="admin-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h1 class="brand-title">PUP Lagoon</h1>
                    <p class="brand-subtitle">Admin Portal</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="AdminDashboard" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="AdminManageUsers" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="AdminManageStalls" class="nav-link">
                    <i class="fas fa-cubes"></i>
                    <span>Food Stalls</span>
                </a>
                <a href="AdminManageOrders" class="nav-link active">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Orders</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="logout-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">

            <header class="top-header">
                <h2 class="page-header-title">PUP Lagoon Food Ordering System</h2>
                <div class="admin-profile">
                    <div class="avatar-circle">A</div>
                    <div class="profile-text">
                        <p class="admin-name">Admin User</p>
                        <p class="admin-role">Administrator <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
            </header>

            <div class="page-content">

                <div class="content-header">
                    <h1 class="page-title">Order Monitoring</h1>
                    <p class="page-subtitle">Track all system orders in real-time</p>
                </div>

                <div class="order-stats-row">
                    <div class="stat-box box-default">
                        <p class="stat-label">All Orders</p>
                        <h2 class="stat-num">7</h2>
                    </div>
                    <div class="stat-box box-pending">
                        <p class="stat-label">Pending</p>
                        <h2 class="stat-num text-pending">2</h2>
                    </div>
                    <div class="stat-box box-preparing">
                        <p class="stat-label">Preparing</p>
                        <h2 class="stat-num text-preparing">1</h2>
                    </div>
                    <div class="stat-box box-ready">
                        <p class="stat-label">Ready</p>
                        <h2 class="stat-num text-ready">1</h2>
                    </div>
                    <div class="stat-box box-completed">
                        <p class="stat-label">Completed</p>
                        <h2 class="stat-num text-dark">2</h2>
                    </div>
                </div>

                <div class="filter-section">
                    <div class="search-wrap">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search orders..." class="filter-input">
                    </div>

                    <div class="date-wrap">
                        <i class="far fa-calendar-alt"></i>
                        <input type="text" placeholder="Select Date" class="filter-input">
                    </div>

                    <div class="filter-wrap">
                        <i class="fas fa-filter"></i>
                        <input type="text" placeholder="Filter status" class="filter-input">
                    </div>
                </div>
                <p class="result-count">Showing 5 orders</p>

                <div class="table-card">
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>ORDER ID</th>
                                <th>CUSTOMER</th>
                                <th>STALL</th>
                                <th>ITEMS</th>
                                <th>TOTAL</th>
                                <th>ORDER DATE</th>
                                <th>ORDER TIME</th>
                                <th>STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-dark">ORD123456</td>
                                <td>Juan Dela Cruz</td>
                                <td>Ate Maria's Carinderia</td>
                                <td>2</td>
                                <td class="font-bold">₱105.00</td>
                                <td>Jan 7, 2026</td>
                                <td>10:45 AM</td>
                                <td><span class="badge badge-completed">Completed</span></td>
                            </tr>
                            <tr>
                                <td class="text-dark">ORD123457</td>
                                <td>Maria Santos</td>
                                <td>Manong's Chicken BBQ</td>
                                <td>1</td>
                                <td class="font-bold">₱75.00</td>
                                <td>Jan 7, 2026</td>
                                <td>11:15 AM</td>
                                <td><span class="badge badge-ready">Ready</span></td>
                            </tr>
                            <tr>
                                <td class="text-dark">ORD123458</td>
                                <td>Pedro Garcia</td>
                                <td>Kuya's Pancit House</td>
                                <td>3</td>
                                <td class="font-bold">₱135.00</td>
                                <td>Jan 7, 2026</td>
                                <td>11:30 AM</td>
                                <td><span class="badge badge-preparing">Preparing</span></td>
                            </tr>
                            <tr>
                                <td class="text-dark">ORD123459</td>
                                <td>Ana Reyes</td>
                                <td>Ate Maria's Carinderia</td>
                                <td>2</td>
                                <td class="font-bold">₱120.00</td>
                                <td>Jan 7, 2026</td>
                                <td>11:45 AM</td>
                                <td><span class="badge badge-pending">Pending</span></td>
                            </tr>
                            <tr>
                                <td class="text-dark">ORD123460</td>
                                <td>Carlos Martinez</td>
                                <td>Sari-Sari Snacks</td>
                                <td>1</td>
                                <td class="font-bold">₱45.00</td>
                                <td>Jan 7, 2026</td>
                                <td>12:00 PM</td>
                                <td><span class="badge badge-pending">Pending</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>

</body>