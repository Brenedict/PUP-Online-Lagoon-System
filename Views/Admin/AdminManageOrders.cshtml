@model PUP_Online_Lagoon_System.Models.DTO.AdminOrdersTabDTO;

@{
    int totalOrderCount = Model.orderList.Count();
    int cancelledOrder = 0, pendingOrder = 0, preparingOrder = 0, readyOrder = 0, completedOrder = 0;

    foreach (var order in Model.orderList)
    {
        switch (order.Item1.OrderStatus.ToLower())
        {
            case "pending":
                pendingOrder++;
                break;
            case "preparing":
                preparingOrder++;
                break;
            case "ready":
                readyOrder++;
                break;
            case "completed":
                completedOrder++;
                break;
            case "cancelled":
                cancelledOrder++;
                break;
            default:
                break;
        }
    }
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Monitoring - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/admin/admin-manage-orders.css" asp-append-version="true">
</head>
<body>

    <div class="admin-container">

        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-circle">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h1 class="brand-title">PUP Lagoon</h1>
                    <p class="brand-subtitle">Admin Portal</p>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="AdminDashboard" class="nav-link">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="AdminManageUsers" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="AdminManageStalls" class="nav-link">
                    <i class="fas fa-cubes"></i>
                    <span>Food Stalls</span>
                </a>
                <a href="AdminManageOrders" class="nav-link active">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Orders</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="logout-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <main class="main-content">

            <header class="top-header">
                <h2 class="page-header-title">PUP Lagoon Food Ordering System</h2>
                <div class="admin-profile">
                    <div class="avatar-circle">A</div>
                    <div class="profile-text">
                        <p class="admin-name">Admin User</p>
                        <p class="admin-role">Administrator <i class="fas fa-chevron-down"></i></p>
                    </div>
                </div>
            </header>

            <div class="page-content">

                <div class="content-header">
                    <h1 class="page-title">Order Monitoring</h1>
                    <p class="page-subtitle">Track all system orders in real-time</p>
                </div>

                <div class="order-stats-row">
                    <div class="stat-box box-default">
                        <p class="stat-label">All Orders</p>
                        <h2 class="stat-num">@totalOrderCount</h2>
                    </div>
                    <div class="stat-box box-pending">
                        <p class="stat-label">Pending</p>
                        <h2 class="stat-num text-pending">@pendingOrder</h2>
                    </div>
                    <div class="stat-box box-preparing">
                        <p class="stat-label">Preparing</p>
                        <h2 class="stat-num text-preparing">@preparingOrder</h2>
                    </div>
                    <div class="stat-box box-ready">
                        <p class="stat-label">Ready</p>
                        <h2 class="stat-num text-ready">@readyOrder</h2>
                    </div>
                    <div class="stat-box box-completed">
                        <p class="stat-label">Completed</p>
                        <h2 class="stat-num text-dark">@completedOrder</h2>
                    </div>
                    <div class="stat-box box-cancelled">
                        <p class="stat-label">Cancelled</p>
                        <h2 class="stat-num text-cancelled">@cancelledOrder</h2>
                    </div>
                </div>

                <div class="filter-section">
                    <div class="search-wrap">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search orders..." class="filter-input">
                    </div>

                    <div class="date-wrap">
                        <i class="far fa-calendar-alt"></i>
                        <input type="text" placeholder="Select Date" class="filter-input">
                    </div>

                    <div class="filter-wrap">
                        <i class="fas fa-filter"></i>
                        <input type="text" placeholder="Filter status" class="filter-input">
                    </div>
                </div>
                <p class="result-count">Showing @(totalOrderCount) orders</p>

                <div class="table-card">
                    <table class="order-table">
                        <thead>
                            <tr>
                                <th>ORDER ID</th>
                                <th>CUSTOMER</th>
                                <th>STALL</th>
                                <th>ITEMS</th>
                                <th>TOTAL</th>
                                <th>ORDER DATE</th>
                                <th>ORDER TIME</th>
                                <th>STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var order in Model.orderList)
                            {
                                var orderInfo = order.Item1;
                                string customerName = order.Item2;
                                string stallName = order.Item3;
                                int orderItemCount = order.Item4;
                                DateTime orderDateTime = DateTime.Parse(orderInfo.OrderDate);
                                <tr>
                                    <td class="text-dark">@(orderInfo.Order_ID)</td>
                                    <td>@(customerName)</td>
                                    <td>@(stallName == "" ? orderInfo.Stall_ID : stallName)</td>
                                    <td>@(orderItemCount)</td>
                                    <td class="font-bold">₱@(orderInfo.OrderTotal)</td>
                                    <td>@(DateOnly.FromDateTime(orderDateTime))</td>
                                    <td>@(TimeOnly.FromDateTime(orderDateTime))</td>
                                    <td><span class="badge badge-@(orderInfo.OrderStatus)">@(orderInfo.OrderStatus)</span></td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>

            </div>
        </main>
    </div>

</body>