@model PUP_Online_Lagoon_System.Models.Stall.FoodItem

<div class="modal-header flex justify-between items-center border-b pb-3">
    <h3 class="text-xl font-bold">Edit @Model.FoodName</h3>
    <button type="button" onclick="closeModal()" class="text-gray-500 hover:text-black">
        <i class="fas fa-times"></i>
    </button>
</div>

<form asp-action="UpdateMenuItem" asp-controller="Vendor" method="post">
    <input type="hidden" asp-for="Food_ID" />
    <input type="hidden" asp-for="Stall_ID" />

    <div class="modal-body py-4 space-y-4">
        <div class="flex flex-col">
            <label class="font-semibold">Food Name</label>
            <input type="text" asp-for="FoodName" class="border p-2 rounded w-full">
        </div>

        <div class="flex flex-col">
            <label class="font-semibold">Description</label>
            <textarea asp-for="FoodDescription" class="border p-2 rounded w-full"></textarea>
        </div>

        <div class="flex flex-col">
            <label class="font-semibold">Quantity Available</label>
            <input type="number" step="1" asp-for="Quantity" class="border p-2 rounded w-full" min="1">
        </div>

        <div class="flex flex-col">
            <label class="font-semibold">Price (₱)</label>
            <input type="number" step="0.01" asp-for="Price" class="border p-2 rounded w-full">
        </div>
    </div>

    <div class="modal-footer border-t pt-3 flex justify-end gap-2">
        <button type="button" onclick="closeModal()" class="px-4 py-2 bg-gray-200 rounded">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Update Item</button>
    </div>
</form>