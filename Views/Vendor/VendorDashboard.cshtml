@model PUP_Online_Lagoon_System.Models.DTO.StallOrdersDTO;
@{
    List<string> orderStatusOptions = new List<string>();
    orderStatusOptions.Add("pending");
    orderStatusOptions.Add("preparing");
    orderStatusOptions.Add("ready");
    orderStatusOptions.Add("completed");
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Dashboard - Ate Maria's</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/vendor/vendor-dashboard.css" asp-append-version="true">
</head>
<body>

    <header class="vendor-header">
        <div class="header-content">
            <div>
                <h1 class="stall-title">@Model.stallDetails.StallName</h1>
                <p class="vendor-name">@Model.vendorFirstName</p>
            </div>

            <a asp-controller="Vendor" asp-action="VendorProfile" class="store-icon-btn">
                <i class="fas fa-user"></i>
            </a>
        </div>
    </header>

    <div class="main-content">

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon-box bg-yellow-100 text-yellow-600">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div>
                    <h2 class="stat-num">1</h2>
                    <p class="stat-label">Pending</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon-box bg-blue-100 text-blue-600">
                    <i class="fas fa-box-open"></i>
                </div>
                <div>
                    <h2 class="stat-num">1</h2>
                    <p class="stat-label">Preparing</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon-box bg-green-100 text-green-600">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <h2 class="stat-num">1</h2>
                    <p class="stat-label">Ready</p>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon-box bg-red-100 text-red-600">
                    <i class="fas fa-peso-sign"></i>
                </div>
                <div>
                    <h2 class="stat-num">3250</h2>
                    <p class="stat-label">Today's Revenue</p>
                </div>
            </div>
        </div>

        <h3 class="section-title">Quick Actions</h3>
        <div class="actions-grid">
            <a href="VendorOrderHistory" style="text-decoration: none; flex: 1;">
                <button class="btn-action-primary" style="width: 100%;">
                    <i class="fas fa-receipt"></i> Order History
                </button>
            </a>
            <a href="VendorMenu" style="text-decoration: none; flex: 1;">
                <button class="btn-action-outline" style="width: 100%;">
                    <i class="fas fa-bars"></i> Manage Menu
                </button>
            </a>
        </div>

        <h3 class="section-title">Active Orders</h3>

        @foreach(var order in Model.ordersList)
        {
            <div class="order-card">
                <div class="order-header">
                    <div>
                        <h4 class="customer-name">Juan Dela Cruz</h4>
                        <p class="order-id">@order.Order_ID</p>
                    </div>
                    <span class="badge badge-@order.OrderStatus">@order.OrderStatus</span>
                </div>
                <div class="order-items">
                    @foreach(var orderItem in Model.orderDetails[order.Order_ID])
                    {
                        string orderItemString = $"{orderItem.Quantity}x {orderItem.FoodName}";
                        <p>@orderItemString</p>
                    }
                </div>

                <div class="order-meta">
                    <span>Pickup: 11:30 AM</span>
                    <span class="price">₱@order.OrderTotal</span>
                </div>

                <div class="status-control">
                    <label>Update Status:</label>
                    <div class="status-container">
                        <form asp-controller="QuickVendor" asp-action="ChangeOrderStatus" method="post">
                            <input type="hidden" name="orderId" value="@order.Order_ID"/>

                            <select name="status" class="status-select" onchange="this.form.submit()">
                                @foreach(string status in orderStatusOptions)
                                {
                                    <option value="@status" selected="@(order.OrderStatus == status)">@status</option>
                                }
                            </select>
                        </form>
                        <form asp-controller="QuickVendor" asp-action="ChangeOrderStatus" method="post" asp-route-orderId="@order.Order_ID" asp-route-status="cancelled">
                            <button class="btn-cancel-order">
                                <i class="fas fa-times"></i> Cancel Order
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }

    </div>
    <nav class="bottom-nav">
        <a href="VendorDashboard" class="nav-item active">
            <i class="fas fa-store"></i>
            <span>Home</span>
        </a>

        <a href="VendorOrderHistory" class="nav-item">
            <i class="fas fa-receipt"></i>
            <span>Orders</span>
        </a>

        <a href="VendorMenu" class="nav-item">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </a>

        <a href="VendorProfile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
    </nav>
</body>

