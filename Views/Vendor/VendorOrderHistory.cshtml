@model PUP_Online_Lagoon_System.Models.DTO.StallOrdersDTO;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - Vendor</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/vendor/vendor-order-history.css" asp-append-version="true">
</head>
<body>

    <header class="history-header">
        <div class="header-left">
            <a asp-controller="Vendor" asp-action="VendorDashboard" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="header-title">Order History</h1>
        </div>
    </header>

    <div class="main-content">
        <p class="history-label">Past Orders (@Model.ordersList.Count())</p>

        @foreach(var order in Model.ordersList)
        {
            <div class="history-card">
                <div class="card-top">
                    <div>
                        <h3 class="customer-name">Ana Reyes</h3>
                        <p class="order-id">@order.Order_ID</p>
                    </div>
                    <span class="badge badge-@order.OrderStatus">@order.OrderStatus</span>
                </div>

                <div class="card-meta">
                    <div class="time"><i class="far fa-clock"></i> @order.OrderDate</div>
                    <div class="total-price">₱@order.OrderTotal</div>
                </div>

                <div class="items-section">
                    <p class="items-label">Items:</p>
                    @foreach (var orderItem in Model.orderDetails[order.Order_ID])
                    {
                        string orderItemString = $"{orderItem.Quantity}x {orderItem.FoodName}";
                        <div class="item-row">
                            <span>@orderItemString</span>
                            <span>₱@orderItem.OriginalPrice</span>
                        </div>
                    }
                </div>
            </div>
        }

    </div>

    <nav class="bottom-nav">
        <a href="VendorDashboard" class="nav-item">
            <i class="fas fa-store"></i>
            <span>Home</span>
        </a>

        <a href="VendorOrderHistory" class="nav-item  active">
            <i class="fas fa-receipt"></i>
            <span>Orders</span>
        </a>

        <a href="VendorMenu" class="nav-item">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </a>

        <a href="VendorProfile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
    </nav>

</body>