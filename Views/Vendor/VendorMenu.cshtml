
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Menu - Vendor</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/vendor/vendor-menu.css" asp-append-version="true">
</head>
<body>

    <header class="menu-header">
        <div class="header-left">
            <a href="vendor-dashboard.html" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="header-title">Manage Menu</h1>
        </div>
        <button class="btn-add-item">
            <i class="fas fa-plus"></i>
        </button>
    </header>

    <div class="sub-header">
        <span class="sub-label">Managing menu for</span>
        <h2 class="store-name">Ate Maria's Carinderia</h2>
    </div>

    <div class="menu-list">

        <div class="menu-item-card">
            <div class="item-top">
                <div>
                    <h3 class="item-name">Chicken Adobo with Rice</h3>
                    <p class="item-price">₱55.00</p>
                </div>
                <div class="action-icons">
                    <a href="#edit-modal" class="btn-icon text-blue-500"><i class="fas fa-edit"></i></a>
                    <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                </div>
            </div>

            <div class="item-status">
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider round"></span>
                </label>
                <span class="status-text text-green">Available</span>
            </div>
        </div>

        <div class="menu-item-card">
            <div class="item-top">
                <div>
                    <h3 class="item-name">Pork Sinigang</h3>
                    <p class="item-price">₱60.00</p>
                </div>
                <div class="action-icons">
                    <a href="#edit-modal" class="btn-icon text-blue-500"><i class="fas fa-edit"></i></a>
                    <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                </div>
            </div>

            <div class="item-status">
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider round"></span>
                </label>
                <span class="status-text text-green">Available</span>
            </div>
        </div>

        <div class="menu-item-card">
            <div class="item-top">
                <div>
                    <h3 class="item-name">Fried Chicken with Rice</h3>
                    <p class="item-price">₱50.00</p>
                </div>
                <div class="action-icons">
                    <a href="#edit-modal" class="btn-icon text-blue-500"><i class="fas fa-edit"></i></a>
                    <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                </div>
            </div>

            <div class="item-status">
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider round"></span>
                </label>
                <span class="status-text text-green">Available</span>
            </div>
        </div>

        <div class="menu-item-card">
            <div class="item-top">
                <div>
                    <h3 class="item-name">Lumpia Shanghai (5 pcs)</h3>
                    <p class="item-price">₱30.00</p>
                </div>
                <div class="action-icons">
                    <a href="#edit-modal" class="btn-icon text-blue-500"><i class="fas fa-edit"></i></a>
                    <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                </div>
            </div>

            <div class="item-status">
                <label class="switch">
                    <input type="checkbox"> <span class="slider round"></span>
                </label>
                <span class="status-text text-gray">Unavailable</span>
            </div>
        </div>

        <div class="menu-item-card">
            <div class="item-top">
                <div>
                    <h3 class="item-name">Halo-Halo</h3>
                    <p class="item-price">₱40.00</p>
                </div>
                <div class="action-icons">
                    <a href="#edit-modal" class="btn-icon text-blue-500"><i class="fas fa-edit"></i></a>
                    <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                </div>
            </div>

            <div class="item-status">
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider round"></span>
                </label>
                <span class="status-text text-green">Available</span>
            </div>
        </div>

    </div>

    <nav class="bottom-nav">
        <a href="VendorDashboard" class="nav-item">
            <i class="fas fa-store"></i>
            <span>Home</span>
        </a>

        <a href="VendorOrderHistory" class="nav-item">
            <i class="fas fa-receipt"></i>
            <span>Orders</span>
        </a>

        <a href="VendorMenu" class="nav-item active">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </a>

        <a href="VendorProfile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
    </nav>

    <div id="edit-modal" class="modal-overlay">
        <div class="modal-box">
            <div class="modal-header">
                <h3 class="modal-title">Edit Item</h3>
                <a href="#" class="close-x"><i class="fas fa-times"></i></a>
            </div>

            <div class="modal-body">
                <div class="input-group">
                    <label>Food Name</label>
                    <input type="text" value="Chicken Adobo with Rice" class="modal-input">
                </div>

                <div class="input-group">
                    <label>Description</label>
                    <input type="text" value="Masarap" class="modal-input">
                </div>

                <div class="input-group">
                    <label>Price (₱)</label>
                    <input type="number" value="55" class="modal-input">
                </div>
            </div>

            <div class="modal-footer">
                <a href="#" class="btn-modal-cancel">Cancel</a>
                <button class="btn-modal-update">Update</button>
            </div>
        </div>
    </div>

</body>