@model PUP_Online_Lagoon_System.Models.DTO.VendorMenuDTO;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Menu - Vendor</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/vendor/vendor-menu.css" asp-append-version="true">
</head>
<body>
    
    <header class="menu-header">
        <div class="header-left">
            <a href="vendor-dashboard.html" class="back-button">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="header-title">Manage Menu</h1>
        </div>
        <form asp-controller="Vendor" asp-action="NewFoodItem" method="post">
            <button type="submit" class="btn-add-item">
                <i class="fas fa-plus"></i>
            </button>
        </form>
    </header>

    <div class="sub-header">
        <span class="sub-label">Managing menu for</span>
        <h2 class="store-name">@Model.stallDetails.StallName</h2>
    </div>

    <div class="menu-list">
        @foreach(var foodItem in Model.foodItems)
        {
            <div class="menu-item-card">
                <div class="item-top">
                    <div>
                        <h3 class="item-name">@foodItem.FoodName</h3>
                        <p class="item-description">@foodItem.FoodDescription</p>
                        <p class="item-price">₱@foodItem.Price</p>
                    </div>
                    <div class="action-icons">
                        <button type="button"
                                onclick="openEditModal('@foodItem.Food_ID')"
                                class="btn-icon text-blue-500">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn-icon text-red-500"><i class="fas fa-trash"></i></button>
                    </div>
                </div>

                <form asp-controller="QuickVendor" asp-action="ToggleFoodItemAvailability" method="post">
                    <input type="hidden" name="foodId" value="@foodItem.Food_ID" />

                    <div class="item-status">
                        <label class="switch">
                            <input type="checkbox" @(foodItem.Availability ? "checked" : "") onchange="this.form.submit()">
                            <span class="slider round"></span>
                        </label>
                        <span class="status-text text-green">@(foodItem.Availability ? "Available" : "Unavailable")</span>
                    </div>
                </form>
            </div>
        }
    </div>

    <div id="modal-container"
         style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.6); z-index:999; justify-content:center; align-items:center;">

        <div id="modal-content" class="bg-white p-6 rounded-lg w-full max-w-md shadow-2xl">
        </div>
    </div>

    <nav class="bottom-nav">
        <a href="VendorDashboard" class="nav-item">
            <i class="fas fa-store"></i>
            <span>Home</span>
        </a>

        <a href="VendorOrderHistory" class="nav-item">
            <i class="fas fa-receipt"></i>
            <span>Orders</span>
        </a>

        <a href="VendorMenu" class="nav-item active">
            <i class="fas fa-bars"></i>
            <span>Menu</span>
        </a>

        <a href="VendorProfile" class="nav-item">
            <i class="fas fa-user"></i>
            <span>Profile</span>
        </a>
    </nav>
</body>
<script>
        function openEditModal(id) {
        const container = document.getElementById('modal-container');
        const content = document.getElementById('modal-content');

        fetch('/Vendor/GetEditModal?id=' + id)
            .then(response => response.text())
            .then(html => {
                content.innerHTML = html;
                container.style.display = 'flex'; // This "pops" the modal
            })
            .catch(err => console.error("Error loading modal:", err));
    }

    function closeModal() {
        document.getElementById('modal-container').style.display = 'none';
    }
</script>